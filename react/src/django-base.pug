| {% load static %}
doctype
html.no-js(lang="ru", manifest="{% static 'public/app.manifest' %}")
  head
    meta(charset="UTF-8")
    meta(
      name="viewport",
      content="width=device-width, initial-scale=1.0"
    )
    | {% block description %}
    | {% endblock %}
    meta(
      http-equive="X-UA-Compatible",
      content="IE=edge"
    )
    link(
        rel="shortcut icon", 
        type="image/x-icon", 
        href="{% static 'public/img/favicon.ico' %}"
    )
    | {% block title %}
    | {% endblock %}
  body
    include ./blocks/templates/_header.pug

    | {% block content %}
    | {% endblock %}
    include ./blocks/templates/_footer.pug
    
    script(async, src="{% static 'public/js/main.js' %}", type="application/javascript")
    link(
        rel="stylesheet",
        href="//cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.2/semantic.min.css"
    )
    link(
      rel="stylesheet",
      href="{% static 'public/css/main.css' %}",
      type="text/css",
      media='none',
      onload="if (media !== 'all') media = 'all'",
      lazyload="1"
    ) 
    link(
      rel="stylesheet",
      href="{% static 'public/css/ie-10-up.css' %}",
      type="text/css",
      media='none',
      onload="if (media !== 'all') media = 'all'",
      lazyload="1"
    )
    <!--[if lt IE 9]>
    <script async src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js">
    <script async src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js">
    <![endif]-->

    <!--[if IE]><link type="text/css" rel="stylesheet" href="{% static 'public/css/ie9.css' %}" lazyload="1" /><![endif]-->
